<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextArea?>
<?import com.jfoenix.controls.JFXTextField?>
<?import cz.stechy.drd.widget.EnumComboBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import cz.stechy.drd.widget.DrDTimeWidget?>
<BorderPane prefHeight="500" prefWidth="550" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.stechy.drd.controller.spellbook.edit.SpellBookEditController">
  <top>
    <HBox styleClass="title-container">
      <Label fx:id="lblTitle" styleClass="title-label" HBox.hgrow="ALWAYS" />
    </HBox>
  </top>
  <center>
    <VBox spacing="16.0">
      <HBox spacing="16.0" VBox.vgrow="ALWAYS">
        <VBox spacing="16.0" HBox.hgrow="ALWAYS">
          <JFXTextField fx:id="txtName" labelFloat="true" promptText="%drd_spell_name" />
          <JFXTextField fx:id="txtMagicName" labelFloat="true" promptText="%drd_spell_magic_name" />
        </VBox>
        <VBox spacing="16.0" HBox.hgrow="ALWAYS">
          <EnumComboBox fx:id="cmbType" enumType="cz.stechy.drd.model.spell.SpellProfessionType" labelFloat="true" promptText="%drd_spell_profession_type" />
          <EnumComboBox fx:id="cmbTarget" enumType="cz.stechy.drd.model.spell.SpellTarget" labelFloat="true" promptText="%drd_spell_target_type" />
          <VBox>
            <Label text="%drd_spell_price"/>
            <Hyperlink fx:id="linkPrice" onAction="#handlePrice" text="0"/>
          </VBox>
        </VBox>
        <VBox spacing="16.0" HBox.hgrow="ALWAYS">
          <JFXTextField fx:id="txtRadius" labelFloat="true" promptText="%drd_spell_radius" />
          <JFXTextField fx:id="txtRange" labelFloat="true" promptText="%drd_spell_range" />
          <JFXTextField fx:id="txtCastTime" labelFloat="true" promptText="%drd_spell_cast_time" />
          <VBox>
            <Label text="%drd_spell_duration"/>
            <DrDTimeWidget fx:id="widgetDuration"/>
          </VBox>
        </VBox>
        <padding>
          <Insets top="8.0" />
        </padding>
      </HBox>
      <HBox spacing="8.0" VBox.vgrow="NEVER">
        <StackPane>
          <ImageView fx:id="imageView" fitHeight="150.0" fitWidth="200.0" onMouseClicked="#handleSelectImage" pickOnBounds="true" preserveRatio="true" />
          <Label fx:id="lblSelectImage" text="%drd_image_click_for_image" visible="true" />
        </StackPane>
        <JFXTextArea fx:id="txtDescription" labelFloat="true" promptText="%drd_item_description" VBox.vgrow="ALWAYS" />
      </HBox>
      <padding>
        <Insets topRightBottomLeft="8.0" />
      </padding>
    </VBox>
  </center>
  <bottom>
    <HBox prefHeight="50" styleClass="separator-line, line-top">
      <Region HBox.hgrow="ALWAYS" />
      <JFXButton fx:id="btnFinish" onAction="#handleFinish" prefHeight="34.0" styleClass="btn, btn-primary, btn-raised" text="%drd_finish" />
      <padding>
        <Insets topRightBottomLeft="8.0" />
      </padding>
    </HBox>
  </bottom>
</BorderPane>
