<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextArea?>
<?import com.jfoenix.controls.JFXTextField?>
<?import cz.stechy.drd.widget.EnumComboBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0"
  xmlns="http://javafx.com/javafx/8.0.121"
  fx:controller="cz.stechy.drd.controller.hero.creator.HeroCreatorController1">

  <top>
    <HBox alignment="CENTER" styleClass="title-container">
      <Label HBox.hgrow="ALWAYS" styleClass="title-label" text="%drd_guide_new_hero_1_title"/>
    </HBox>
  </top>

  <center>
    <HBox spacing="16">
      <VBox VBox.vgrow="ALWAYS" alignment="CENTER_LEFT" spacing="16.0">
        <JFXTextField labelFloat="true" minWidth="150.0" promptText="%drd_hero_name"
          fx:id="txtName">
          <padding>
            <Insets left="8.0" right="8.0" top="10.0"/>
          </padding>
        </JFXTextField>
        <EnumComboBox enumType="cz.stechy.drd.model.entity.Conviction" labelFloat="true"
          minWidth="150.0" promptText="%drd_hero_conviction" fx:id="cmbConviction"/>
        <EnumComboBox enumType="cz.stechy.drd.model.entity.hero.Hero$Race" labelFloat="true"
          minWidth="150.0" promptText="%drd_guide_new_hero_1_hero_race" fx:id="cmbRace"/>
        <EnumComboBox enumType="cz.stechy.drd.model.entity.hero.Hero$Profession"
          labelFloat="true" minWidth="150.0"
          promptText="%drd_guide_new_hero_1_hero_profession" fx:id="cmbProfession"/>
      </VBox>
      <JFXTextArea HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" labelFloat="true" minHeight="100.0"
        prefHeight="100.0" promptText="%drd_hero_description" fx:id="txtDescription"/>
      <padding>
        <Insets left="8.0" right="8.0" top="16.0"/>
      </padding>
    </HBox>
  </center>
  <bottom>
    <HBox alignment="CENTER" spacing="8">
      <JFXButton onAction="#handleCancel" styleClass="toolbar-button, icon-cancel"/>
      <Region HBox.hgrow="ALWAYS"/>
      <JFXButton onAction="#handleReset" styleClass="btn, btn-raised, btn-danger"
        text="%drd_reset"/>
      <Region HBox.hgrow="ALWAYS"/>
      <JFXButton onAction="#handleNext" styleClass="toolbar-button, icon-next" fx:id="btnNext"/>
      <padding>
        <Insets topRightBottomLeft="8.0"/>
      </padding>
    </HBox>
  </bottom>
</BorderPane>
