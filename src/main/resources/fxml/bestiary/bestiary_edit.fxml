<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="300" prefWidth="400"
  xmlns="http://javafx.com/javafx/8.0.112"
  fx:controller="cz.stechy.drd.controller.bestiary.edit.BestiaryEditController">
  <bottom>
    <HBox BorderPane.alignment="CENTER" prefHeight="50.0" spacing="8.0">
      <padding>
        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
      </padding>
      <Button onAction="#handleCancel" text="%drd_cancel"/>
      <Region HBox.hgrow="ALWAYS"/>
      <Button onAction="#handleFinish" text="%drd_finish"/>
    </HBox>
  </bottom>
  <center>
    <TabPane BorderPane.alignment="CENTER" tabClosingPolicy="UNAVAILABLE">
      <Tab text="Obecné">
        <fx:include source="bestiary_edit_general.fxml" fx:id="tabBestiaryGeneral"/>
      </Tab>
      <Tab text="Vlastnosti">
        <fx:include source="bestiary_edit_properties.fxml" fx:id="tabBestiaryProperties"/>
      </Tab>
      <Tab text="Ostatní">
        <fx:include source="bestiary_edit_other.fxml" fx:id="tabBestiaryOther"/>
      </Tab>
    </TabPane>
  </center>
</BorderPane>
