<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<BorderPane prefWidth="900" prefHeight="500" xmlns="http://javafx.com/javafx/8.0.112"
  xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="cz.stechy.drd.controller.bestiary.BestiaryController">
  <center>
    <TableView fx:id="tableBestiary" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
      <columnResizePolicy>
        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
      </columnResizePolicy>
      <columns>
        <TableColumn fx:id="columnImage" prefWidth="75.0" text="%drd_item_image">
          <cellValueFactory>
            <PropertyValueFactory property="image"/>
          </cellValueFactory>
        </TableColumn>
        <TableColumn fx:id="columnName" prefWidth="75.0" text="%drd_bestiary_name">
          <cellValueFactory>
            <PropertyValueFactory property="name"/>
          </cellValueFactory>
        </TableColumn>
        <TableColumn fx:id="columnAuthor" prefWidth="75.0" text="%drd_bestiary_author">
          <cellValueFactory>
            <PropertyValueFactory property="author"/>
          </cellValueFactory>
        </TableColumn>
        <TableColumn fx:id="columnMobClass" prefWidth="75.0" text="%drd_bestiary_mob_class">
          <cellValueFactory>
            <PropertyValueFactory property="mobClass"/>
          </cellValueFactory>
        </TableColumn>
        <TableColumn fx:id="columnRulesType" prefWidth="75.0" text="%drd_bestiary_rules_type">
          <cellValueFactory>
            <PropertyValueFactory property="rulesType"/>
          </cellValueFactory>
        </TableColumn>
        <TableColumn fx:id="columnViability" prefWidth="75.0" text="%drd_bestiary_viability">
          <cellValueFactory>
            <PropertyValueFactory property="viability"/>
          </cellValueFactory>
        </TableColumn>
        <TableColumn fx:id="columnAction" minWidth="135.0" text="%drd_bestiary_action"/>
      </columns>
    </TableView>
  </center>
  <right>
    <VBox prefWidth="50.0" spacing="8.0">
      <padding>
        <Insets bottom="8.0" left="8.0" right="8.0" top="32.0"/>
      </padding>
      <Button fx:id="btnAddItem" onAction="#handleAddItem">
        <styleClass>
          <String fx:value="sidebar-button"/>
          <String fx:value="icon-add"/>
        </styleClass>
      </Button>
      <Button fx:id="btnRemoveItem" onAction="#handleRemoveItem">
        <tooltip>
          <Tooltip text="%drd_repository_item_remove"/>
        </tooltip>
        <styleClass>
          <String fx:value="sidebar-button"/>
          <String fx:value="icon-subtract"/>
        </styleClass>
      </Button>
      <Button fx:id="btnEditItem" onAction="#handleEditItem">
        <tooltip>
          <Tooltip text="%drd_repository_item_edit"/>
        </tooltip>
        <styleClass>
          <String fx:value="sidebar-button"/>
          <String fx:value="icon-edit"/>
        </styleClass>
      </Button>
      <Button fx:id="btnSynchronize" onAction="#handleSynchronize">
        <tooltip>
          <Tooltip text="%drd_repository_item_synchronize"/>
        </tooltip>
        <styleClass>
          <String fx:value="sidebar-button"/>
          <String fx:value="icon-synchronize"/>
        </styleClass>
      </Button>
      <ToggleButton fx:id="btnToggleOnline">
        <tooltip>
          <Tooltip text="%drd_repository_toggle_online_database"/>
        </tooltip>
        <styleClass>
          <String fx:value="sidebar-button"/>
          <String fx:value="icon-online"/>
        </styleClass>
      </ToggleButton>
    </VBox>
  </right>
</BorderPane>
