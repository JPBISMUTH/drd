<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<TableView fx:id="tableRangedWeapons" prefHeight="400.0" prefWidth="1000.0"
  xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="cz.stechy.drd.controller.shop.ShopWeaponRangedController">
  <columnResizePolicy>
    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
  </columnResizePolicy>
  <columns>
    <TableColumn fx:id="columnImage" minWidth="40.0" text="%drd_item_image">
      <cellValueFactory>
        <PropertyValueFactory property="image"/>
      </cellValueFactory>
    </TableColumn>
    <TableColumn fx:id="columnName" minWidth="100.0" text="%drd_item_name">
      <cellValueFactory>
        <PropertyValueFactory property="name"/>
      </cellValueFactory>
    </TableColumn>
    <TableColumn fx:id="columnAuthor" minWidth="100.0" text="%drd_item_author">
      <cellValueFactory>
        <PropertyValueFactory property="author"/>
      </cellValueFactory>
    </TableColumn>
    <TableColumn fx:id="columnStrength" minWidth="50.0" text="%drd_item_weapon_strength">
      <cellValueFactory>
        <PropertyValueFactory property="strength"/>
      </cellValueFactory>
    </TableColumn>
    <TableColumn fx:id="columnRampancy" minWidth="75.0" text="%drd_item_weapon_rampancy">
      <cellValueFactory>
        <PropertyValueFactory property="rampancy"/>
      </cellValueFactory>
    </TableColumn>
    <TableColumn fx:id="columnType" minWidth="75.0" text="%drd_item_weapon_mele_ranged_type">
      <cellValueFactory>
        <PropertyValueFactory property="weaponType"/>
      </cellValueFactory>
    </TableColumn>
    <TableColumn text="%drd_item_weapon_ranged_range">
      <columns>
        <TableColumn fx:id="columnRangeLow" minWidth="50.0"
          text="%drd_item_weapon_ranged_range_low">
          <cellValueFactory>
            <PropertyValueFactory property="rangeLow"/>
          </cellValueFactory>
        </TableColumn>
        <TableColumn fx:id="columnRangeMedium" minWidth="50.0"
          text="%drd_item_weapon_ranged_range_medium">
          <cellValueFactory>
            <PropertyValueFactory property="rangeMedium"/>
          </cellValueFactory>
        </TableColumn>
        <TableColumn fx:id="columnRangeLong" minWidth="50.0"
          text="%drd_item_weapon_ranged_range_long">
          <cellValueFactory>
            <PropertyValueFactory property="rangeLong"/>
          </cellValueFactory>
        </TableColumn>
      </columns>
    </TableColumn>
    <TableColumn fx:id="columnWeight" minWidth="50.0" text="%drd_item_weight">
      <cellValueFactory>
        <PropertyValueFactory property="weight"/>
      </cellValueFactory>
    </TableColumn>
    <TableColumn fx:id="columnPrice" minWidth="90.0" text="%drd_item_price">
      <cellValueFactory>
        <PropertyValueFactory property="price"/>
      </cellValueFactory>
    </TableColumn>
    <TableColumn fx:id="columnAmmount" minWidth="60.0" text="%drd_item_ammount">
      <cellValueFactory>
        <PropertyValueFactory property="ammount"/>
      </cellValueFactory>
    </TableColumn>
    <TableColumn fx:id="columnAction" minWidth="135.0" text="%drd_shop_action"/>
  </columns>
</TableView>
