<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.121"
  xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.stechy.drd.app.server.ServerController">
  <center>
    <TextArea fx:id="txtArea" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER"/>
  </center>
  <bottom>
    <HBox spacing="8.0" BorderPane.alignment="CENTER">
      <padding>
        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
      </padding>
      <TextField fx:id="txtMessage" HBox.hgrow="ALWAYS" onKeyPressed="#handleKeyPressed"/>
      <Button onAction="#handleSend" mnemonicParsing="false" text="Odeslat"/>
    </HBox>
  </bottom>
</BorderPane>
